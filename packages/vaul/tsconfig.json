{
  "extends": "@repo/typescript-config",
  "compilerOptions": {
    "outDir": "./dist",
    "jsx": "react",
    "target": "es2018",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "lib": ["es2015", "dom"],
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}
