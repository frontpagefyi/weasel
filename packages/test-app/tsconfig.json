{
  "extends": "@repo/typescript-config/next.json",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": ["./*"],
    },
    "allowJs": true,
  },
  "include": [
    "**/*.ts",
    "**/*.js",
    "**/*.tsx",
    "**/*.mjs",
    "**/*.mts",
    "next-env.d.ts",
    ".next/types/**/*.ts",
  ],
  "exclude": ["node_modules", "test-results", "playwright-report"],
}
